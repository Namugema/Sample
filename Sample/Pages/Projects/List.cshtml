@page
@model Sample.Pages.Restaurant.ListModel
@{
    ViewData["Title"] = "Projects";
}

<h2>List of projects</h2>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" value="" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<br />

@foreach(var project in Model.Projects)
{
    <partial name="_Summary" model="project"/>
}

<a asp-page="./Edit" class="btn btn-primary">Add New</a>

@section footer{
    <div>@Model.footerText</div>
}
